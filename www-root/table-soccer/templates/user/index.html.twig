{% extends 'index/index.html.twig' %}

{% block title %}{{ 'user.index.title' | trans }}{% endblock %}

{% block additionalContentClasses %}{% endblock %}

{% block content %}
    <h4 class="card-title mt-3 text-center">{{ 'user.index.title' | trans }}</h4>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'app.id' | trans }}</th>
                <th>{{ 'user.email' | trans }}</th>
                <th>{{ 'user.confirmed' | trans }}</th>
                <th>{{ 'app.actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in pagination.currentPageResults %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ (user.confirmed ? 'app.yes' : 'app.no') | trans }}</td>
                <td>

                    <a class="btn btn-dark" href="{{ path('user_show', {'id': user.id}) }}">{{ 'app.show' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'app.no_records_found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ pagerfanta(pagination, 'twitter_bootstrap4') }}
{% endblock %}
