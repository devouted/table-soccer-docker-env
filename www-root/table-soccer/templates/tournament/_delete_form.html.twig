<form method="post" action="{{ path('tournament_delete', {'id': tournament.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournament.id) }}">
    <div class="float-right">
        <button class="btn btn-danger">{{ 'app.delete' | trans }}</button>
    </div>
</form>
